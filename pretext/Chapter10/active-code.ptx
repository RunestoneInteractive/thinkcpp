#include <string>
#include <vector>
using namespace std;

int endsWith(const vector<string>& vec, char c) {
    int count;
    for (size_t i = 0; i < vec.size(); i++) {
        last = vec.size() - 1;
        if (vec[last] == c) {
            count++;
        }
    }
    return count;
}
        ]]></input>
    </program>
